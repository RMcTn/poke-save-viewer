<p id="notice"><%= notice %></p>
<%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>
<br>
<%= "owner: " + @gen2_entry.user.email %> <br>
<%= "current user: " + current_user.email %>

<p>
  <strong>Game:</strong>
  <%= @gen2_entry.game.titleize %>
</p>
<p>
  <strong>Playername:</strong>
  <%= @gen2_entry.player_name %>
</p>

<p>
  <strong>Playtime:</strong>
  <% minutes, seconds = @gen2_entry.playtime.divmod(60) %>
  <% hours, minutes = minutes.divmod(60) %>
  <%= "#{hours.to_s.rjust(2, '0')}:#{minutes.to_s.rjust(2, '0')}:#{seconds.to_s.rjust(2, '0')}" %>
</p>

<p>
  <strong>Johto badges:</strong>
  <%= @gen2_entry.johto_badges %>
</p>

<p>
  <strong>Kanto badges:</strong>
  <%= @gen2_entry.kanto_badges %>
</p>

<p>
<details open>
  <summary><strong>Party:</strong></summary>
  <%= render @gen2_entry.gen2_party %>
</details>
</p>

<p>
<details open>
  <summary><strong>Hall of fame</strong></summary>
  <%= render @gen2_entry.gen2_hall_of_fame_entries %>
</details>
</p>

<%= link_to 'Edit', edit_gen2_entry_path(@gen2_entry) %> |
<%= link_to 'Back', gen2_entries_path %>
